{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "services": {
        "backend": {
          "root": "backend",
          "builder": "NIXPACKS",
          "buildCommand": "npm install && npm run build",
          "startCommand": "npm run start"
        },
        "frontend": {
          "root": "frontend",
          "builder": "NIXPACKS",
          "buildCommand": "npm install && npm run build",
          "startCommand": "npm run preview"
        }
      }
    }
  }
  